<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".Overview"
    android:id="@+id/overviewGrid"
    android:layout_margin="30dp">


    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnCategory_BreadAndCeralAndCornflakes"
        android:layout_row="0"
        android:layout_column="0"
        android:src="@drawable/bread_and_cereals_and_cornflakes"
        android:background="@null"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:clickable="true"
        android:onClick="setCategory"
        android:tag="bread_and_cereals_and_cornflakes"
    />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnCategory_MeatAndColdmeat"
        android:layout_row="1"
        android:layout_column="0"
        android:src="@drawable/meat_and_coldmeat"
        android:background="@null"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:clickable="true"
        android:onClick="setCategory"
        android:tag="meat_and_coldmeat"
        />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnCategory_SweetsAndSnacks"
        android:layout_row="0"
        android:layout_column="1"
        android:src="@drawable/sweets_and_snacks"
        android:background="@null"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:clickable="true"
        android:onClick="setCategory"
        android:tag="sweets_and_snacks"
        />
    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnCategory_MilkProductsAndEggs"
        android:layout_row="0"
        android:layout_column="2"
        android:src="@drawable/milk_products_and_eggs"
        android:background="@null"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:clickable="true"
        android:onClick="setCategory"
        android:tag="milk_products_and_eggs"
        />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnCategory_fruitsAndVegetablesAndSalads"
        android:layout_row="1"
        android:layout_column="1"
        android:src="@drawable/fruits_and_vegetables_and_salads"
        android:background="@null"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:clickable="true"
        android:onClick="setCategory"
        android:tag="fruits_and_vegetables_and_salads"
        />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnCategory_SpreadAndCovering"
        android:layout_row="1"
        android:layout_column="2"
        android:src="@drawable/spread_and_covering"
        android:background="@null"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:clickable="true"
        android:onClick="setCategory"
        android:tag="spread_and_covering"
        />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnCategory_SpiceryAndOilsAndGrease"
        android:layout_row="2"
        android:layout_column="0"
        android:src="@drawable/spicery_and_oils_and_grease"
        android:background="@null"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:clickable="true"
        android:onClick="setCategory"
        android:tag="spicery_and_oils_and_grease"
        />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnCategory_instantMealAndTinnedFoodAndPasta"
        android:layout_row="2"
        android:layout_column="1"
        android:src="@drawable/instant_meal_and_tinned_food_and_pasta"
        android:background="@null"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:clickable="true"
        android:onClick="setCategory"
        android:tag="instant_meal_and_tinned_food_and_pasta"
        />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnCategory_FishAndSeafood"
        android:layout_row="2"
        android:layout_column="2"
        android:src="@drawable/fish_and_seafood"
        android:background="@null"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:clickable="true"
        android:onClick="setCategory"
        android:tag="fish_and_seafood"
        />

    <ImageButton
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/btnCategory_Drinks"
        android:layout_row="3"
        android:layout_column="1"
        android:src="@drawable/drinks"
        android:background="@null"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:clickable="true"
        android:onClick="setCategory"
        android:tag="btnCategory_Drinks"
        />
</GridLayout>
